<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/icon_option_container"
    android:layout_width="wrap_content"
    android:layout_height="52dp"
    android:elevation="6dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/option_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/stop_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                android:paddingStart="6dp"
                android:paddingTop="14dp"
                android:paddingEnd="6dp"
                android:paddingBottom="14dp"
                android:text="@string/leap_stop"
                android:textColor="@android:color/white"
                android:textSize="@dimen/leap_text_14"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/language_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:orientation="horizontal">

            <View
                android:id="@+id/ic_language"
                android:layout_width="13dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_leap_language" />

            <TextView
                android:id="@+id/txt_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:importantForAccessibility="no"
                android:paddingStart="6dp"
                android:paddingTop="14dp"
                android:paddingEnd="10dp"
                android:paddingBottom="14dp"
                android:text="@string/leap_language"
                android:textColor="@android:color/white"
                android:textSize="@dimen/leap_text_14"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>