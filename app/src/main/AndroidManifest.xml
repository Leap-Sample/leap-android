<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="is.leap.android.sample">

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="barcode" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".LeapSampleApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_combined_shape_copy_7"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_combined_shape_copy_7"
        android:supportsRtl="true"
        android:theme="@style/Theme.LeapAndroidSample">
        <activity android:name=".ui.HomeActivity"></activity>
        <activity android:name=".ui.RegisterActivity"
            android:launchMode="singleTop"/>

        <activity android:name=".ui.SplashScrActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.LeapService"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="true" />
    </application>

</manifest>